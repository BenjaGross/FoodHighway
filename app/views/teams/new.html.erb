<div class="container">
  <fieldset>
    <legend>New Team</legend>
    <%= form_for(@team, :html => {class: "new_team form-horizontal"}) do |f| %>
      <div class="form-group">
        <%= f.label :name %>:
        <%= f.text_field :name %><br />
      </div>

      <div class="form-group">
        <%= f.label "Goal (min 100 lbs)" %>:
        <%= f.text_field :goal %><br />
      </div>

      <%= f.submit %>
    <% end %>
  </fieldset>
</div>
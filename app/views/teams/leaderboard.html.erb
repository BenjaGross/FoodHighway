<div class = "wrapp">
  <h1>Leaderboard</h1>
  <div class="row">
    <div class="col-md-6">
      <h3>Top Teams</h3>
      <ul>
      <% @top_teams.each_with_index do |team, i| %>
        <p><%= i+1 %>.  <%= team.name %>: <%= team.current_weight %> lbs</p>
      <% end %>
      </ul>
    </div>
    <div class="col-md-6">
      <h3>Top Users</h3>
      <ul>
      <% @top_users.each_with_index do |user, i| %>
        <p><%= i+1 %>.  <%= user.full_name %>: <%= user.current_weight %> lbs</p>
      <% end %>
      </ul>
    </div>
  </div>

  <%= render 'graph' %>
</div>
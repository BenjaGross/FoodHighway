<%= form_for(@food, url: team_foods_path(params[:team_id]), :html => {class: "new_food form-horizontal"}) do |f| %>
  <div class="form-group">
    <%= f.label :name %>:
    <%= f.text_field :name %><br />
  </div>

  <div class="form-group">
    <%= f.label "Weight (lbs)" %>:
    <%= f.text_field :weight %> <%= select_tag "units", "<option>lbs</option><option>oz</option><option>g</option>".html_safe %><br />
  </div>

  <div class="form-group">
    <%= f.collection_select :food_group_id, FoodGroup.all, :id, :category %>
  </div>

  <%= f.submit %>
<% end %>